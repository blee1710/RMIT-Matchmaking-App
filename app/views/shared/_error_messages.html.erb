<% if @tasks.errors.any? %>
    <div id="error_explanation" >
        <div class="alert alert-danger">
            The form contains <%= pluralize(@tasks.errors.count, "error") %>
        </div>
        <ul>
            <% @tasks.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>