<h3  class="sub-title">All Tasks</h3>
<div class="container">
  <div class="row d-flex justify-content-center">
  <%= will_paginate @tasks, list_classes: %w(pagination justify-content-center) %>
  </div>
    <div class="row">
      <% @tasks.each do |w| %>
      <div class="col">
        <div class="card mb-3" style="width: 540px;">
        <div class="card-header"> <!-- dummy div to style the card-->
        </div>
          <div class="row no-gutters">
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= w.title %></h5>
                <p class="card-text"><%= w.description %></p>
                <p class="card-text"><%= w.skills %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <div class="row d-flex justify-content-center">
    <%= will_paginate @tasks, list_classes: %w(pagination justify-content-center) %>
  </div>
</div>
